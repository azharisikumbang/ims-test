@model IMSTest.Models.BayarAngsuranForm

@{
    ViewData["Title"] = "Bayar Angsuran";
}

<h1>Bayar Angsuran</h1>

<h4>Kontrak</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Nomor Kontrak
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KontrakNo)
            </dd>
            <dt class="col-sm-4">
                Client Name
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClientName)
            </dd>
            <dt class="col-sm-4">
                Angsuran Ke
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AngsuranKe)
            </dd>
            <dt class="col-sm-4">
                Tanggal Jartuh Tempo
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.TanggalJatuhTempo)
            </dd>
            <dt class="col-sm-4">
                Angsuran Per Bulan (Rp)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AngsuranPerBulan)
            </dd>
        </dl>

        <form asp-action="Bayar" asp-controller="Angsuran" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-2">
                <label asp-for="JumlahBayar" class="control-label"></label>
                <input asp-for="JumlahBayar" class="form-control" min="@Model.AngsuranPerBulan" />
                <span asp-validation-for="JumlahBayar" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Bayar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
